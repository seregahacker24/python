comanda = "а"
d = 1
print("ты проснулся у себя дома в кровати, куда ты пойдешь?")
while comanda != "выход":
    if d == 1:
        comanda = input("ты можешь 'пойти на кухню покушать', 'полежать еще', либо 'пойти в школу сразу'. введи одну из этих команд:")
        if comanda == "пойти на кухню покушать":
            print("ты покушал и уснул на кухне, мама пришла с работы увидела что ты спишь и прогулял школу и отправила тебя жить на улицу, теперь ты бомж")
            comanda = "выход"
        if comanda == "пойти в школу сразу":
            print("ты пошел в школу, но оказалось что первый урок был расстрел и теперь ты умер")
            comanda = "выход"
        if comanda == "полежать еще":
            print("ты полежал но опоздал на первый урок, но когда ты пришел никого из вашего класса не было")
            d = 2
    if d == 2:
        comanda = input("ты решил пройти по всей школе, но ни в одном кабинете никого не было, даже в столовке, ты можешь 'пойти в кабинет директора', 'пойти домой', либо 'ночевать в школе', введи одну из этих команд:")
        if comanda == 'пойти в кабинет директора':
            print("ты пошел в кабинет директора, там оказались расстрельщики, которые проводили урок расстрела и они тебя убили")
            comanda = "выход"
        if comand == 'пойти домой':
            print("ты пришел домой, а оказалось что после уроков в школе учителя пошли проводить уроки в дома учеников, там они тебя ждали и убили как только ты пришел")
            comanda = "выход"
        if comanda == "ночевать в школе":
            print("ты решил ночевать в школе, ты улегся на диване в корридоре, когда проснулся обнаружил у себя под диваном оружие")
            d = 3
    if d == 3:
        comand = input("теперь у тебя есть оружие ты можешь 'проверить кабинет директора', 'сходить в столовку', либо 'поиграть в компьютер в школе', введи одну из этих команд:")
    else:
        print("команда неверная, попробуй еще раз:")
